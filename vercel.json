{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/docs/(.*)", "dest": "/public/docs/$1" },
    { "src": "/api/(.*)", "dest": "/server.js" },
    { "src": "/(.*\\.(js|css|png|jpg|pdf|ico|svg))", "dest": "/public/$1" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
